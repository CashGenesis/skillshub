<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply global font -->
        <item name="android:fontFamily">@font/myfont</item>
        <!-- Optional: add for Material components -->
        <item name="fontFamily">@font/myfont</item>


        <item name="colorPrimary">@color/lime_yellow</item>
        <item name="colorPrimaryVariant">@color/lime_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_yellow</item>
        <item name="colorSecondaryVariant">@color/lime_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!-- Another style definition (separate, not nested) -->
    <style name="Theme.Skillshub" parent="Base.Theme.Skillshub" />


</resources>
