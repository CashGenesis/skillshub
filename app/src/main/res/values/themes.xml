<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Apply global font -->
        <item name="android:fontFamily">@font/myfont</item>
        <item name="fontFamily">@font/myfont</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/lime_yellow</item>
        <item name="colorPrimaryVariant">@color/lime_yellow</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/lime_yellow</item>
        <item name="colorSecondaryVariant">@color/lime_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!-- Theme alias (you can rename or configure as needed) -->
    <style name="Theme.Skillshub" parent="Theme.YourAppName" />


</resources>

