<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/txtPortfolioTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#1   Lorem Ipsum Dolor Sit Amet"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPortfolioDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, nulla facilisi. Duis et diam vel nibh fringilla ultrices est."
        android:textColor="#BBBBBB"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtPortfolioLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Link..."
        android:textColor="#8E44AD"
        android:textSize="14sp" />
</LinearLayout>